<script>
count := 0
doubled := double(count)

func increment() {
    count++
}

func decrement() {
    count--
}
</script>

<template>
<div class="counter">
    <h1>{doubled}</h1>
    <button @click="increment()">+</button>
    <button @click="decrement()">-</button>
</div>
</template>

<style>
.counter {
    font-family: sans-serif;
    text-align: center;
    margin-top: 50px;
}
h1 { font-size: 4em; }
button { font-size: 2em; margin: 0.2em; padding: 0.2em 0.5em; }
</style>